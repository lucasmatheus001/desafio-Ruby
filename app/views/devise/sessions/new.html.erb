<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="root">
    <div class="App background">
      <div id="db-wrapper">
        <div class="d-flex flex-column container">
          <div class="align-items-center justify-content-center g-0 min-vh-100 row">
            <div class="py-8 py-xl-0 col-lg-5 col-md-5">
              <div class="card">
                <div class="p-6 card-body">
                  <div class="mb-4">
                    <h1 class="mb-1 fw-bold text-center">Sign in</h1>
                    <span>Donâ€™t have an account?<%= link_to  "Sign up", new_user_registration_path ,class: "ms-2 link"%></span>
                  </div>
                  <form class="">
                    <div class="row">
                      <div class="mb-3 col-lg-12 col-md-12">
                        <%= f.label :Email, class: "form-label" %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-input ", id: "email",placeholder: "Email" %>
                      </div>
                      <div class="mb-3 col-lg-12 col-md-12">
                        <%= f.label :Password , class: "form-label"%>
                        <%= f.password_field :password, autofocus: true, autocomplete: "current_password", class: "form-control-input", id: "password",placeholder: "**************" %>
                      </div>
                      <div class="mb-3 col-lg-12 col-md-12">
                        <div class="d-md-flex justify-content-between align-items-center">
                          <div class="mb-3 mb-md-0">
                            <% if devise_mapping.rememberable? %>
                              <div class="form-check">
                                <%= f.check_box :remember_me, id: "formBasicCheckbox", class: "form-check-input" %>
                                <%= f.label :remember_me, for:"formBasicCheckbox", class: "form-check-label" %>
                              </div>
                            <% end %>
                          </div>
                          <%= link_to "Forgot your password?", new_user_password_path, class: "link"%>
                        </div>
                      </div>
                      <div class="mb-0 d-grid gap-2 col-lg-12 col-md-12">
                        <%= f.submit "Sign in", class: "btn btn-primary" %>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

